@model ListingTodos.Models.Todo
<body>
    <h1>Edit todo</h1>
    @using (Html.BeginForm("edit", "todo"))
    {
    <input type="hidden" name="Id" value="@Model.Id" />
    <label>What to do? </label> @Html.TextBoxFor(x => x.Title) <br/>
    <label>Did you finish? </label> @Html.CheckBoxFor(x => x.IsDone)<br />
    <label>Is it urgent? </label> @Html.CheckBoxFor(x => x.IsUrgent)<br /><br />
    <button type="submit">Save</button>
    }
    <form action="/" method="get"><button type="submit">Cancel</button></form>
</body>